{
    "manifest_version": 3,
    "name": "FlowCapture Intent Recorder",
    "version": "1.0",
    "description": "Observes user interactions to generate structured automation intent.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "webNavigation"
    ],
    "action": {
        "default_popup": "src/popup/popup.html"
    },
    "background": {
        "service_worker": "src/background/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content/content.js"
            ]
        }
    ]
}